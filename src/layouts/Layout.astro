---
import "@fontsource-variable/onest"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import { ViewTransitions } from "astro:transitions"

interface Props {
  title: string
  description: string
}

const { description, title } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>

  <body class="relative text-black dark:text-white">
    <!-- Fondo base con gradiente animado -->
    <div
      class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-gray-50 dark:bg-gray-950
      bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(217,216,255,0.5),rgba(255,255,255,0.9))]
      dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>
    
    <!-- Capa de estrellas fugaces -->
    <div class="shooting-stars">
      <div class="star"></div>
      <div class="star"></div>
      <div class="star"></div>
      <div class="star"></div>
      <div class="star"></div>
    </div>
    
    <!-- Partículas flotantes sutiles -->
    <div class="floating-particles">
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
    </div>
    
    <!-- Gradiente de color animado sutil -->
    <div class="animated-gradient"></div>
    
    <Header />
    <slot />
    <Footer />
    
    <style is:global>
      :root {
        color-scheme: light dark;
      }

      html {
        font-family: "Onest Variable", system-ui, sans-serif;
        scroll-behavior: smooth;
      }

      body {
        color: rgba(17, 17, 17, 0.9);
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overscroll-behavior: none;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
        
        /* Desactivar animaciones para usuarios que prefieren movimiento reducido */
        .shooting-stars,
        .floating-particles,
        .animated-gradient {
          display: none;
        }
      }

      @media (prefers-color-scheme: dark) {
        body {
          color: rgba(255, 255, 255, 0.9);
        }
      }

      /* Estrellas fugaces */
      .shooting-stars {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        pointer-events: none;
        overflow: hidden;
      }

      .star {
        position: absolute;
        width: 2px;
        height: 2px;
        background: linear-gradient(45deg, rgba(255, 255, 255, 0.8), rgba(217, 216, 255, 0.4));
        border-radius: 50%;
        opacity: 0;
        animation: shootingStar 8s linear infinite;
      }

      .star:nth-child(1) {
        top: 10%;
        left: 20%;
        animation-delay: 0s;
        animation-duration: 6s;
      }

      .star:nth-child(2) {
        top: 30%;
        left: 60%;
        animation-delay: 2s;
        animation-duration: 8s;
      }

      .star:nth-child(3) {
        top: 50%;
        left: 10%;
        animation-delay: 4s;
        animation-duration: 7s;
      }

      .star:nth-child(4) {
        top: 70%;
        left: 80%;
        animation-delay: 1s;
        animation-duration: 9s;
      }

      .star:nth-child(5) {
        top: 20%;
        left: 90%;
        animation-delay: 3s;
        animation-duration: 5s;
      }

      @keyframes shootingStar {
        0% {
          opacity: 0;
          transform: translateX(-100px) translateY(-100px) scale(0);
        }
        10% {
          opacity: 1;
          transform: translateX(-50px) translateY(-50px) scale(1);
        }
        70% {
          opacity: 1;
          transform: translateX(100px) translateY(100px) scale(1);
        }
        100% {
          opacity: 0;
          transform: translateX(200px) translateY(200px) scale(0);
        }
      }

      /* Partículas flotantes */
      .floating-particles {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        pointer-events: none;
        overflow: hidden;
      }

      .particle {
        position: absolute;
        width: 4px;
        height: 4px;
        background: rgba(217, 216, 255, 0.3);
        border-radius: 50%;
        animation: float 15s linear infinite;
      }

      .particle:nth-child(1) { left: 10%; animation-delay: 0s; animation-duration: 12s; }
      .particle:nth-child(2) { left: 25%; animation-delay: 2s; animation-duration: 18s; }
      .particle:nth-child(3) { left: 45%; animation-delay: 4s; animation-duration: 15s; }
      .particle:nth-child(4) { left: 65%; animation-delay: 1s; animation-duration: 20s; }
      .particle:nth-child(5) { left: 80%; animation-delay: 3s; animation-duration: 14s; }
      .particle:nth-child(6) { left: 95%; animation-delay: 5s; animation-duration: 16s; }

      @keyframes float {
        0% {
          opacity: 0;
          transform: translateY(100vh) scale(0);
        }
        10% {
          opacity: 1;
          transform: translateY(90vh) scale(1);
        }
        90% {
          opacity: 1;
          transform: translateY(-10vh) scale(1);
        }
        100% {
          opacity: 0;
          transform: translateY(-20vh) scale(0);
        }
      }

      /* Gradiente animado sutil */
      .animated-gradient {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        pointer-events: none;
        background: linear-gradient(
          45deg,
          rgba(217, 216, 255, 0.05),
          rgba(255, 255, 255, 0.02),
          rgba(120, 119, 198, 0.05)
        );
        background-size: 400% 400%;
        animation: gradientShift 20s ease infinite;
      }

      @keyframes gradientShift {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
      }

      /* Modo oscuro para las animaciones */
      @media (prefers-color-scheme: dark) {
        .star {
          background: linear-gradient(45deg, rgba(255, 255, 255, 0.6), rgba(120, 119, 198, 0.4));
        }

        .particle {
          background: rgba(120, 119, 198, 0.4);
        }

        .animated-gradient {
          background: linear-gradient(
            45deg,
            rgba(120, 119, 198, 0.08),
            rgba(0, 0, 0, 0.02),
            rgba(217, 216, 255, 0.05)
          );
        }
      }

      #header-nav {
        animation: blur linear both 0.5s;
        animation-timeline: scroll();
        animation-range: 0 500px;
      }

      @keyframes blur {
        to {
          backdrop-filter: blur(20px);
          border-width: 1px;
          border-color: rgba(0, 0, 0);
          padding: 0.25rem 0.75rem;
          display: flex;
          flex-direction: row;
          align-items: center;
          background-color: rgb(229, 229, 229);
          border-radius: 9999px;
        }
      }

      @media (prefers-color-scheme: dark) {
        @keyframes blur {
          from {
            border: 0px;
          }
          to {
            box-shadow:
              0px 5px 50px -5px rgba(0, 0, 0, 0.1),
              0px 0px 0 1px rgba(0, 0, 0, 0.3);
            background: rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(20px);
            border-width: 1px;
            border-color: rgba(0, 0, 0);
            padding-left: 0.75rem;
            padding-right: 0.75rem;
            padding-top: 0.25rem;
            padding-bottom: 0.25rem;
            display: flex;
            flex-direction: row;
            align-items: center;
            background-color: rgba(0, 0, 0, 0.3);
            border-radius: 9999px;
          }
        }
      }
    </style>
  </body>
</html>